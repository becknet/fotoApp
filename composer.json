{
    "name": "danielbrodbeck/foto-app",
    "description": "A secure photo sharing application",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "scripts": {
        "format": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "test": "phpunit",
        "analyse": "phpstan analyse --level=8",
        "lint-html": "echo 'HTML validation - implement with validator service'"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}